{
    "comment" : "Please, don't touch this.",
    "defEnv" : "prod",
    "registeredEnvs" : [
        "dev",
        "debug",
        "stage",
        "prod"
    ],
    "logLevels" : [
        "silly",
        "trace",
        "info",
        "debug",
        "warn",
        "error"
    ],
    "defExt" : "",
    "{bundle}" : {
        "{env}" : {
            "bundlesPath"   : "{executionPath}/bundles",
            "bundlePath"    : "{bundlesPath}/{bundle}",
            "modelsPath"    : "{bundlesPath}/{bundle}/models",
            "handlersPath"  : "{bundlesPath}/{bundle}/handlers",
            "staticPath"    : "{bundlesPath}/{bundle}/static",
            "releases"      : "{bundlesPath}/releases",
            "sources"       : "{bundlesPath}/src",
            "logsPath"      : "{executionPath}/logs",
            "tmpPath"       : "{executionPath}/tmp",
            "port" : {
                "http" : 82,
                "https" : 443,
                "ftp" : 21,
                "ssh" : 22
            },
            "server" : {
                "response" : {
                    "header" : {}
                }
            },
            "encoding" : "utf8",
            "template" : {
                "engine"    : "swig",
                "ext"       : "html",
                "path"      : "{bundlesPath}/{bundle}/views"
            },
            "files" :{
                "routing"   : "routing.json",
                "app"       : "app.json",
                "view"      : "view.json",
                "setting"   : "setting.json",
                "model"     : "connector.json"
            },
            "contexts" : {
                "paths" : {}
            }
        }
    },
    "log" : [
        {"path" : "/logs/geena"}
    ]
}

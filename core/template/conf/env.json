{
    "defEnv" : "prod",
    "registeredEnvs" : [
        "dev",
        "debug",
        "stage",
        "prod"
    ],
    "logLevels" : [
        "silly",
        "info",
        "debug",
        "warn",
        "error"
    ],
    "defExt" : "",
    "{appName}" : {
        "{appEnv}" : {
            "apps" : [],
            "appsPath" : "/apps",
            "staticPath" : "/static",
            "port" : {
                "http" : 82,
                "https" : 443,
                "ftp" : 21,
                "ssh" : 22
            },
            "server" : {
                "response" : {
                    "header" : {}
                }
            },
            "encoding" : "utf8",
            "template" : {
                "engine"    : "swig",
                "ext"       : "html",
                "path"      : "/{appsPath}/{appName}/views"
            },
            "files" :{
                "routing"   : "routing.json",
                "app"       : "app.json",
                "view"      : "view.json",
                "settings"  : "settings.json",
                "models"    : "models.json",
                "addons"    : "addons.json"
            }
        }
    },
    "log" : [
        {"path" : "/logs/geena"}
    ]
}
